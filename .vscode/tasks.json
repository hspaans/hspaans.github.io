{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run webserver",
            "type": "shell",
            "command": "sphinx-autobuild --port 8000 docs/ build/",
            "dependsOn": [
                "remove development environment"
            ]
        },
        {
            "label": "remove development environment",
            "type": "shell",
            "command": "sphinx-build -M clean docs build",
        },
        {
            "label": "run linkcheck",
            "type": "shell",
            "command": "sphinx-build -M linkcheck docs build",
            "dependsOn": [
                "remove development environment"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "build html",
            "type": "shell",
            "command": "sphinx-build -M html docs build",
            "problemMatcher": [
                {
                    "owner": "sphinx",
                    "pattern": [
                        {
                            "regexp": "^(.*?):(\\d+): (.*): (.*)$",
                            "file": 1,
                            "line": 2,
                            "severity": 3,
                            "message": 4
                        }
                    ]
                }
            ],
            "dependsOn": [
                "remove development environment"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}